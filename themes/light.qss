QMainWindow {
    background-color: #f5f5f5;
    color: #212121;
}

QWidget {
    background-color: #f5f5f5;
    color: #212121;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', sans-serif;
    font-size: 11pt;
}

QPushButton {
    background-color: #ffffff;
    border: 1px solid #e0e0e0;
    border-radius: 6px;
    padding-top: 6px;
    padding-bottom: 6px;
    padding-left: 16px;
    padding-right: 16px;
    color: #212121;
    min-height: 24px;
}

QPushButton::icon {
    width: 14px;
    height: 14px;
    margin-top: 0px;
    margin-bottom: 0px;
}

QPushButton:hover {
    background-color: #f0f0f0;
    border: 1px solid #5a5a5a;
}

QPushButton:pressed {
    background-color: #5a5a5a;
    color: #ffffff;
}

QPushButton:disabled {
    background-color: #f5f5f5;
    color: #9e9e9e;
    border: 1px solid #e0e0e0;
}

QPushButton[primary="true"] {
    background-color: #5a5a5a;
    border: 1px solid #5a5a5a;
    color: #ffffff;
}

QPushButton[primary="true"]:hover {
    background-color: #5a5a5a;
}

QPushButton[remove="true"] {
    background-color: transparent;
    border: none;
    border-radius: 4px;
    padding: 0px;
}

QPushButton[remove="true"]:hover {
    background-color: #e0e0e0;
}

QPushButton[remove="true"]:pressed {
    background-color: #5a5a5a;
}

QLabel {
    background-color: transparent;
    color: #212121;
}

QLabel[heading="true"] {
    font-size: 14pt;
    font-weight: 600;
    color: #212121;
}

QLabel[subheading="true"] {
    font-size: 10pt;
    color: #616161;
}

QLabel[class="filename"] {
    color: #424242;
    font-size: 10pt;
}

QLineEdit {
    background-color: #ffffff;
    border: 1px solid #e0e0e0;
    border-radius: 6px;
    padding: 8px;
    color: #212121;
    min-height: 20px;
}

QLineEdit:focus {
    border: 1px solid #5a5a5a;
}

QLineEdit:disabled {
    background-color: #f5f5f5;
    color: #9e9e9e;
}

QTextEdit {
    background-color: #ffffff;
    border: 1px solid #e0e0e0;
    border-radius: 6px;
    color: #212121;
}

QTextEdit:focus {
    border: 1px solid #5a5a5a;
}

QCheckBox {
    color: #212121;
    spacing: 8px;
}

QCheckBox::indicator {
    width: 18px;
    height: 18px;
    border: 2px solid #e0e0e0;
    border-radius: 4px;
    background-color: #ffffff;
}

/* Remove hover visual on checkbox indicator to avoid row hover triggers */
QCheckBox::indicator:hover {
    border: 2px solid #e0e0e0;
    background-color: #ffffff;
}

QCheckBox::indicator:checked {
    background-color: #5a5a5a;
    border: 2px solid #5a5a5a;
}

QCheckBox::indicator:checked:hover {
    background-color: #5a5a5a;
}

QComboBox {
    background-color: #ffffff;
    border: 1px solid #e0e0e0;
    border-radius: 6px;
    padding: 8px;
    min-height: 36px;
    color: #212121;
    text-align: left;
}

QComboBox:hover {
    border: 1px solid #5a5a5a;
}

QComboBox::drop-down {
    border: none;
    padding-right: 8px;
}

QComboBox::down-arrow {
    image: url(icons/layout.svg);
    width: 16px;
    height: 16px;
    margin: 0px;
    padding: 0px;
}

QToolButton {
    width: 18px;
    height: 18px;
    padding: 0px;
    margin: 0px;
}

QComboBox QAbstractItemView {
    background-color: #ffffff;
    border: 1px solid #e0e0e0;
    color: #212121;
    selection-background-color: #5a5a5a;
    selection-color: #ffffff;
    padding: 8px;
    text-align: left;
}

QGroupBox {
    background-color: #ffffff;
    border: 1px solid #e0e0e0;
    border-radius: 8px;
    margin-top: 12px;
    padding-top: 20px;
    font-weight: 600;
}

QGroupBox::title {
    subcontrol-origin: margin;
    left: 16px;
    padding: 0 8px;
    margin-top: 8px;
    color: #616161;
}

QProgressBar {
    background-color: #f5f5f5;
    border: 1px solid #e0e0e0;
    border-radius: 8px;
    text-align: center;
    color: #212121;
    height: 24px;
    max-height: 24px;
    min-height: 24px;
}

QProgressBar::chunk {
    background-color: #5a5a5a;
    border-radius: 7px;
}

QScrollBar:vertical {
    background-color: #f5f5f5;
    width: 14px;
    border-radius: 7px;
}

QScrollBar::handle:vertical {
    background-color: #e0e0e0;
    border-radius: 7px;
    min-height: 30px;
}

QScrollBar::handle:vertical:hover {
    background-color: #bdbdbd;
}

QScrollBar::add-line:vertical,
QScrollBar::sub-line:vertical {
    height: 0px;
}

QScrollBar:horizontal {
    background-color: #f5f5f5;
    height: 14px;
    border-radius: 7px;
}

QScrollBar::handle:horizontal {
    background-color: #e0e0e0;
    border-radius: 7px;
    min-width: 30px;
}

QScrollBar::handle:horizontal:hover {
    background-color: #bdbdbd;
}

QScrollBar::add-line:horizontal,
QScrollBar::sub-line:horizontal {
    width: 0px;
}

QListWidget {
    background-color: #ffffff;
    border: 1px solid #e0e0e0;
    border-radius: 6px;
    color: #212121;
    outline: none;
}

QListWidget::item {
    padding: 8px;
    border-bottom: 1px solid #e0e0e0;
}

QListWidget::item:hover {
    background-color: #f0f0f0;
}

QListWidget::item:selected {
    background-color: #5a5a5a;
    color: #ffffff;
}

QTableWidget {
    background-color: #ffffff;
    border: 1px solid #e0e0e0;
    border-radius: 6px;
    color: #212121;
    gridline-color: #e0e0e0;
    selection-background-color: #5a5a5a;
    selection-color: #ffffff;
}

QTableWidget::item {
    padding: 4px;
    border: none;
}

QTableWidget::item:alternate {
    background-color: #f5f5f5;
}

QTableWidget::item:selected {
    background-color: #5a5a5a;
    color: #ffffff;
}

QTableWidget::item:selected:alternate {
    background-color: #5a5a5a;
    color: #ffffff;
}

/* Row hover uses a subtle light color in the light theme */
QTableWidget::item:hover {
    background-color: #f0f0f0;
}

QTableWidget::item:focus {
    background-color: transparent;
}

QHeaderView::section {
    background-color: #f5f5f5;
    color: #616161;
    padding: 6px;
    border: none;
    border-right: 1px solid #e0e0e0;
    border-bottom: 1px solid #e0e0e0;
    font-weight: 600;
}

QHeaderView::section:first {
    border-top-left-radius: 6px;
}

QHeaderView::section:last {
    border-top-right-radius: 6px;
    border-right: none;
}

QStatusBar {
    background-color: #ffffff;
    border-top: 1px solid #e0e0e0;
    color: #616161;
}

QStatusBar::item {
    border: none;
}

QFrame[frameShape="4"],
QFrame[frameShape="5"] {
    border: 1px solid #e0e0e0;
    border-radius: 6px;
}

QDialog {
    background-color: #f5f5f5;
}

QTabWidget::pane {
    border: 1px solid #e0e0e0;
    background-color: #f5f5f5;
}

QTabBar::tab {
    background-color: #ffffff;
    color: #616161;
    padding: 8px 16px;
    margin-right: 4px;
    border-top-left-radius: 6px;
    border-top-right-radius: 6px;
}

QTabBar::tab:selected {
    background-color: #f5f5f5;
    color: #212121;
    border-bottom: 2px solid #5a5a5a;
}

QTabBar::tab:hover {
    color: #212121;
}

QToolTip {
    background-color: #323232;
    color: #ffffff;
    border: 1px solid #424242;
    border-radius: 6px;
    padding: 6px;
    opacity: 220;
}
